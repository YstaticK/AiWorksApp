<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtEmptyRecycleBin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycle Bin is empty"
        android:layout_centerInParent="true"
        android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecycleBin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- Floating buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Restore"
        android:src="@android:drawable/ic_menu_revert"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnRestore"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Delete Permanently"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnDelete"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Cancel Selection"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="gone"/>

</RelativeLayout>
