<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Model selection (already present) -->
        <Spinner
            android:id="@+id/spinnerModelImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_generation_models"/>

        <!-- Reference Image -->
        <ImageView
            android:id="@+id/ivReference"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="Reference Image" />

        <Button
            android:id="@+id/btnSelectReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Reference Image" />

        <!-- Save to Reference Library -->
        <CheckBox
            android:id="@+id/cbSaveReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to Reference Library" />

        <EditText
            android:id="@+id/etReferenceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference Name"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/spinnerReferenceDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/reference_library_destinations"
            android:visibility="gone"/>

        <!-- Prompts -->
        <EditText
            android:id="@+id/etPrompts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter prompts"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"/>

        <!-- Advanced Options Drop-down -->
        <LinearLayout
            android:id="@+id/layoutAdvancedOptions"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced Options"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etNegativePrompts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Negative prompts"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top"/>

            <SeekBar
                android:id="@+id/seekSimilarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"/>

            <EditText
                android:id="@+id/etSimilarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Similarity (%)"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etSeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seed (optional)"
                android:inputType="number"/>

        </LinearLayout>

        <!-- Image Ratio -->
        <Spinner
            android:id="@+id/spinnerRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_ratios"/>

        <!-- Image Size -->
        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_sizes"/>

        <!-- Batch Size -->
        <Spinner
            android:id="@+id/spinnerBatchSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/batch_sizes"/>

        <!-- Generate Button -->
        <Button
            android:id="@+id/btnStartGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Generation" />

    </LinearLayout>
</ScrollView>
