<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Provider + Model at the TOP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider" />
        <Spinner
            android:id="@+id/spinnerProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model" />
        <Spinner
            android:id="@+id/spinnerModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Reference image -->
        <Button
            android:id="@+id/btnSelectReference"
            android:text="Select Reference Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivReference"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="8dp" />

        <!-- Similarity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similarity" />

        <SeekBar
            android:id="@+id/seekSimilarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <EditText
            android:id="@+id/etSimilarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0%"
            android:ems="3" />

        <!-- Prompts -->
        <EditText
            android:id="@+id/etPrompts"
            android:hint="Enter prompts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNegativePrompts"
            android:hint="Negative prompts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Seed -->
        <EditText
            android:id="@+id/etSeed"
            android:hint="Seed (optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Aspect Ratio + Size + Batch Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspect Ratio" />
        <Spinner
            android:id="@+id/spinnerAspectRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Size" />
        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Size" />
        <Spinner
            android:id="@+id/spinnerBatchSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- API Key + Remember -->
        <EditText
            android:id="@+id/etApiKey"
            android:hint="Enter API Key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbRememberKey"
            android:text="Remember API Key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Start Generation -->
        <Button
            android:id="@+id/btnStartGeneration"
            android:text="Start Generation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
