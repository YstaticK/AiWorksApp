<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Provider -->
        <Spinner
            android:id="@+id/spinnerProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_generation_providers" />

        <!-- Model -->
        <Spinner
            android:id="@+id/spinnerModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/models_openai" />

        <!-- Reference -->
        <ImageView
            android:id="@+id/ivReference"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="Reference Image" />

        <Button
            android:id="@+id/btnSelectReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Reference Image" />

        <!-- Prompts -->
        <EditText
            android:id="@+id/etPrompts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter prompts" />

        <!-- Negative Prompts -->
        <EditText
            android:id="@+id/etNegativePrompts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter negative prompts" />

        <!-- Seed -->
        <EditText
            android:id="@+id/etSeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seed (optional)"
            android:inputType="number" />

        <!-- Similarity -->
        <SeekBar
            android:id="@+id/seekSimilarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <EditText
            android:id="@+id/etSimilarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Similarity (0â€“100)" />

        <!-- Size -->
        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_sizes" />

        <!-- Quality -->
        <Spinner
            android:id="@+id/spinnerQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/image_quality" />

        <!-- Batch size -->
        <Spinner
            android:id="@+id/spinnerBatchSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/batch_sizes" />

        <!-- API Key -->
        <EditText
            android:id="@+id/etApiKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OpenAI API Key"
            android:inputType="textPassword"
            android:importantForAutofill="noExcludeDescendants"
            android:autofillHints=""
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbRememberKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember API Key"
            android:layout_marginBottom="16dp" />

        <!-- Start -->
        <Button
            android:id="@+id/btnStartGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Generation" />
    </LinearLayout>
</ScrollView>
