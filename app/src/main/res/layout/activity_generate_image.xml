<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dropdown for model selection -->
    <Spinner
        android:id="@+id/spinnerModelImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/image_generation_models"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"/>

    <!-- Optional reference picture -->
    <ImageView
        android:id="@+id/ivReference"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:contentDescription="@string/reference_image"
        android:layout_marginBottom="16dp"/>

    <!-- Generate button -->
    <Button
        android:id="@+id/btnGenerateImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Image"/>
</LinearLayout>
