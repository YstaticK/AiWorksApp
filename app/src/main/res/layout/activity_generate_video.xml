<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Reference image -->
        <ImageView
            android:id="@+id/imgReferenceVideo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Reference Image" />

        <Button
            android:id="@+id/btnSelectImageReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Reference Image" />

        <!-- Reference video -->
        <VideoView
            android:id="@+id/videoReference"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnSelectVideoReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Reference Video" />

        <!-- Save checkbox -->
        <CheckBox
            android:id="@+id/chkSaveReferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save references to library" />

        <!-- Prompts -->
        <EditText
            android:id="@+id/txtPromptVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter prompt" />

        <EditText
            android:id="@+id/txtNegativePromptVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter negative prompt (optional)" />

        <!-- Video options -->
        <Spinner
            android:id="@+id/spinnerLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/video_lengths" />

        <Spinner
            android:id="@+id/spinnerQualityVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/video_qualities" />

        <Button
            android:id="@+id/btnGenerateVideoNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Video" />

        <ProgressBar
            android:id="@+id/progressVideoGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
